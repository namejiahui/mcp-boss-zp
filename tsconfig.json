{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": false,
        "target": "ESNext",
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "package.json"
    ],
    "exclude": [
        "node_modules"
    ]
}